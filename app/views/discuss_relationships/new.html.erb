<%= form_for @discuss, :url => discuss_relationships_path do |f| %>
  <% if @program.program_type == 0%>
    <%= f.label :program, "Re: TV Program (" + @program.name + ")" %>
  <% else %>
    <%= f.label :program, "Re: Program Group (" + @program.name + ")" %>
  <% end %>
  <%= hidden_field_tag :program_type, @program.program_type %>
  <%= hidden_field_tag :program_id, @program.id %>
  <%= hidden_field_tag 'discuss[user_id]', current_user.id %>
  <%= hidden_field_tag 'discuss[time]', Time.now %>
  <% if @src != nil %>
    <%= hidden_field_tag :src, @src.id %>
  <% end %>
  <br/>
  <%= f.label :topic, "Topic" %>
  <br/>
  <%= f.text_field :topic %>    
  <br/>
  <%= f.label :content, "Content" %>
  <br/>
  <%= f.text_area :content %>
  <br/>
  <%= f.submit "Create" %>
<% end %>
