
<img src="data:image/jpg;base64,<%=@program.image %>">

<%= form_for @program, :html => { :method => :post }, :url => crawl_program_content_index_path do |f| %>
  <%= f.hidden_field :id %>
  <%= f.hidden_field :program_type %>
  <%= f.label :name, "Name" %>
  <br>
  <%= f.text_field :name %>    
  <br>
  <%= f.label :key_word, "Key Word" %>
  <br>
  <%= f.text_field :key_word %>    
  <br>
  <%= f.label :description, "Description" %>
  <br>
  <%= f.text_area :description %>
  <br>
  <%= f.label :image, "Image" %>
  <br>
  <%= f.text_area :image %>
  <br>
  <%= f.submit "Save" %>
<% end %>

